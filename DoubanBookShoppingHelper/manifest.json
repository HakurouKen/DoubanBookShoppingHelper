{ 
	"name": "Douban Book Shopping Helper",  
	"version": "2.0.1", 
  "manifest_version": 2,
	"description" : "为各大购书网站的界面添加豆瓣评分与链接，并提供价格对比", 
  "content_scripts" : [
    {
      "matches" : [
        "*://www.amazon.cn/*",
        "*://www.amazon.com/*",
        "*://item.jd.com/*",
        "*://product.dangdang.com/*",
        "*://book.beifabook.com/product/*",
        "*://product.china-pub.com/*",
        "*://www.suning.com/emall/*"
        ],
      "js" : ["content_script.js"]
    }
  ],
	"permissions" : [
		"background",
    "tabs",
    "http://*.douban.com/*"
	],
  "icons":{
    "48":"icon_big.png"
  }
}